---
const currentPath = Astro.url.pathname;
const pages = [
	{
		url: "/",
		title: "Home"
	},
	{
		url: "/blog",
		title: "Blog"
	},
	{
		url: "/tags",
		title: "Tags"
	},
	{
		url: "/about",
		title: "About"
	},
]
---
<nav id="nav-links" class="w-full uppercase bg-red-300 p-4 max-sm:hidden">
	<ul class="flex justify-around">
			{pages.map((page) => {
					if (page.url === currentPath) {
						return <li><span class="bold">{page.title}</span></li>
					}
					return <li><a class="underline py-2 px-1 hover:bg-white focus:bg-white hover:text-red-300 focus:text-red-300" href={page.url}>{page.title}</a></li>
				}
			)}
	</ul>
</nav>